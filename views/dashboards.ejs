        }

        async function fetchUserData() {
            try {
                const jwt = localStorage.getItem('jwt');
                if (!jwt) {
                    throw new Error('Token not found');
                }

                const response = await fetch('/api/user', {
                    headers: {
                        Authorization: `Bearer ${jwt}`,
                    },
                });

